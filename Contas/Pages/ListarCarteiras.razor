@page "/todascarteiras"
@inject DadosCarteiras dadosCarteira
@inject NavigationManager nav

<h1>ListarCarteiras</h1>
@if(dadosCarteira.ListaDados is not null)
{
    foreach(var carteira in dadosCarteira.ListaDados)
    {
        <h5>
            Número da Conta: @carteira.numConta<br>
            Nome: @carteira.Dono <br>
            CPF: @carteira.CPF<br>
            Saldo: R$@carteira.Saldo<br>
            Limite da conta: R$@carteira.limiteConta
            </h5>
            <button 
                @onclick="() => AbrirTela(carteira.Dono)"
                >Acessar 
            </button>
    }
}

@code {

    public void AbrirTela(string carteiraNome)
    {
        nav.NavigateTo("/acesso/" + carteiraNome);
    }

}
